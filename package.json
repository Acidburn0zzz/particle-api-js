{
  "name": "@particle/api",
  "version": "1.0.1",
  "description": "Particle API Client",
  "main": "lib/Particle.js",
  "browser": "lib/ParticleBundle.js",
  "scripts": {
    "prepublish": "npm run lint && npm run compile",
    "compile": "./node_modules/.bin/babel --optional runtime -sd lib/ src/",
    "test": "./node_modules/.bin/mocha test/ -R spec --compilers js:babel/register",
    "cover": "./node_modules/.bin/istanbul cover ./node_modules/.bin/_mocha test/ -- -R spec --compilers js:babel/register",
    "lint": "./node_modules/.bin/eslint src/",
    "bundle": "./node_modules/.bin/browserify ./src/Particle.js -t babelify -o ./lib/ParticleBundle.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/spark/particle-api-js"
  },
  "author": "Emily Rose <nexxy@particle.io>",
  "keywords": [
    "particle",
    "library",
    "spark",
    "api"
  ],
  "license": "LGPL-3.0",
  "devDependencies": {
    "babel": "^5.8.23",
    "babel-eslint": "^4.1.3",
    "babelify": "^6.3.0",
    "browserify": "^11.2.0",
    "eslint": "^1.5.0",
    "eslint-config-airbnb": "0.0.8",
    "eslint-plugin-react": "^3.4.1",
    "istanbul": "^0.3.21",
    "mocha": "^2.3.3",
    "should": "^7.1.0",
    "sinon": "^1.17.0"
  },
  "dependencies": {
    "babel-runtime": "^5.8.24",
    "request": "^2.63.0"
  }
}
